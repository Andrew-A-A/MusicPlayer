<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/track_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/track_thumbnail" />

    <TextView
        android:id="@+id/track_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/track_img"
        app:layout_constraintStart_toEndOf="@+id/track_img"
        app:layout_constraintTop_toTopOf="@+id/track_img"
        app:layout_constraintVertical_bias="0.344" />

    <TextView
        android:id="@+id/artist_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/track_img"
        app:layout_constraintStart_toStartOf="@+id/track_name_text"
        app:layout_constraintTop_toBottomOf="@+id/track_name_text" />
</androidx.constraintlayout.widget.ConstraintLayout>